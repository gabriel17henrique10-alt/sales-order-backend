{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
      "target": "ES2024",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "strict": true, 
      "strictNullChecks": true,
      "noImplicitAny": false, //this not permit an variable whithout type
      "esModuleInterop": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "rootDir": "./",
      "sourceMap": true,
      "paths": {
        "@models/*": ["./@cds-models/*/index.ts"],
        "@/*": ["./srv/*"],
        "@tests/*": ["./test/*"]
      }
  },
  "include": ["srv", "test"],
  "exclude": ["node_modules"]
}